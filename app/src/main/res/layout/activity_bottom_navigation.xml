<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.movie.bottomnavigation.BottomNavigationActivity">

    <FrameLayout
      android:id="@+id/container"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@id/bottom_navigation_movie"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottom_navigation_movie"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="@color/white_FFFFFF"
      app:itemTextColor="@color/selector_enable_disable"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:menu="@menu/item_bottom_navigation" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
